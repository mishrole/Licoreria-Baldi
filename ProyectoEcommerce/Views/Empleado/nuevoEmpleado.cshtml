@model ProyectoEcommerce.Models.EmpleadoO

@{
    ViewBag.Title = "LICORERES BALDÍ | REGISTRO DE EMPLEADO";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2 class="text-center pt-4 mb-3">NUEVO EMPLEADO</h2>

@using (Html.BeginForm("nuevoEmpleado", "Empleado", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal form-center">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row mb-3">
        @Html.LabelFor(model => model.codigo, htmlAttributes: new { @class = "control-label col-md-4 mt-1" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = ViewBag.codigo } })
            @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-4 mt-1" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.nacimiento, htmlAttributes: new { @class = "control-label col-md-4 mt-1" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.nacimiento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nacimiento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.direccion, htmlAttributes: new { @class = "control-label col-md-4 mt-1" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.distrito, htmlAttributes: new { @class = "control-label col-md-4 mt-2" })
        <div class="col-sm-8">
            @Html.DropDownList("distrito", (SelectList)ViewBag.distrito, "[Seleccione]", new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "control-label col-md-4 mt-1" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.cargo, htmlAttributes: new { @class = "control-label col-md-4 mt-1" })
        <div class="col-sm-8">
            @Html.DropDownList("cargo", (SelectList)ViewBag.cargo, "[Seleccione]", new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.contratacion, htmlAttributes: new { @class = "control-label col-md-4 mt-1" })
        <div class="col-sm-8">
            @Html.EditorFor(model => model.contratacion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.contratacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.foto, htmlAttributes: new { @class = "control-label col-md-4 mt-1" })
        <div class="col-sm-8">
            <!--@Html.EditorFor(model => model.foto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.foto, "", new { @class = "text-danger" })-->
            @Html.TextBox("foto", "", new { type = "file", @class= "file-input" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-12">
            <input type="submit" value="REGISTRAR" class="btn btn-principal" />
        </div>
    </div>
</div>
}

<div class="col-md-12 text-right">
    @Html.ActionLink("VER LISTA", "listadoEmpleados")
</div>

<script>
    if ('@ViewBag.mensaje' != "") {
        swal('@ViewBag.mensaje', "Presione el botón para cerrar", "success")
    }
</script>

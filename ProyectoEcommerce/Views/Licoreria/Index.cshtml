@{
    ViewBag.Title = "LICORERES BALDÍ | INICIO";
}

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/fotos_galeria/galeria1.jpg" class="d-block w-100" alt="foto galeria bar">
        </div>
        <div class="carousel-item">
            <img src="~/fotos_galeria/galeria2.jpg" class="d-block w-100" alt="foto galeria bar">
        </div>
        <div class="carousel-item">
            <img src="~/fotos_galeria/galeria3.jpg" class="d-block w-100" alt="foto galeria bar">
        </div>
        <div class="carousel-item">
            <img src="~/fotos_galeria/galeria4.jpg" class="d-block w-100" alt="foto galeria bar">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container-fluid">
    <div id="promos">
        <div class="row">
            <div class="col-12 col-md-4 pl-0 pr-3" id="promo-whisky">
                <div class="promos-mensaje mensaje-whisky">
                    <span class="promos-mensaje--whisky">AHORRA HASTA <span class="promo-descuento">30%</span> EN TODO WHISKY</span>
                    <!--<button class="btn btn-light mt-4 btn-promo">VER WHISKIES</button>-->
                    @Html.ActionLink("VER WHISKIES", "listadoWhiskies", "Licoreria", new object { }, new { @class = "btn btn-light mt-4 btn-promo disabled" })
                </div>

            </div>

            <div class="col-12 col-md-4 pl-0 pr-2">
                <div class="promos-mensaje mensaje-cuadricula-cerveza">
                    <span class="promos-mensaje--cerveza"><span class="promo-descuento">20%</span><br /> EN TODO CERVEZA</span>
                    <!--<button class="btn btn-light mt-4 btn-promo">VER CERVEZAS</button>-->
                    @Html.ActionLink("VER CERVEZAS", "listadoCervezas", "Licoreria", new object { }, new { @class = "btn btn-light mt-4 btn-promo disabled" })
                </div>
                <img class="img-fluid pb-2 pt-2 pb-md-2 pt-md-0" src="~/fotos_promociones/promo_cerveza.jpg" alt="" />

                <div class="promos-mensaje mensaje-cuadricula-vino">
                    <span class="promos-mensaje--vino"><span class="promo-descuento">25%</span><br /> EN VINOS SELECTOS</span>
                    <!--<button class="btn btn-light mt-4 btn-promo">VER VINOS</button>-->
                    @Html.ActionLink("VER VINOS", "listadoVinos", "Licoreria", new object { }, new { @class = "btn btn-light mt-4 btn-promo disabled" })
                </div>
                <img class="img-fluid pt-2 pb-2 pt-md-2 pb-md-0" src="~/fotos_promociones/promo_vino.jpg" alt="" />
            </div>
            <div class="col-12 col-md-4 pl-2 pr-0">
                <div class="promos-mensaje mensaje-cuadricula-ron">
                    <span class="promos-mensaje--ron"><span class="promo-descuento">15%</span><br /> EN RON SELECTO</span>
                    <!--<button class="btn btn-light mt-4 btn-promo">VER RONES</button>-->
                    @Html.ActionLink("VER RONES", "listadoRones", "Licoreria", new object { }, new { @class = "btn btn-light mt-4 btn-promo disabled" })
                </div>
                <img class="img-fluid pb-2 pt-2 pb-md-2 pt-md-0" src="~/fotos_promociones/promo_ron.jpg" alt="" />

                <div class="promos-mensaje mensaje-cuadricula-tequila">
                    <span class="promos-mensaje--tequila"><span class="promo-descuento">10%</span><br /> EN TODO TEQUILA</span>
                    <!--<button class="btn btn-light mt-4 btn-promo">VER TEQUILAS</button>-->
                    @Html.ActionLink("VER TEQUILAS", "listadoTequilas", "Licoreria", new object { }, new { @class = "btn btn-light mt-4 btn-promo disabled" })
                </div>
                <img class="img-fluid pt-2" src="~/fotos_promociones/promo_tequila.jpg" alt="" />
            </div>
        </div>
    </div>
</div>